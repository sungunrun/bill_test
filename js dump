<script type=text/javascript>
    function myFunction(elem) {
        $("#num8").css("background-color", "white");
        var id = "tools"+$(elem).attr("id");
        var x = document.getElementById(id);
        if (x.style.display === "none") {
            x.style.display = "none";
        } 
        else {
            x.style.display = "none";
        }
        }
}






